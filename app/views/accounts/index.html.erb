<div class="max-w-2xl mx-auto py-6">
  <h1 class="text-2xl font-bold mb-6">Accounts</h1>

  <table class="w-full table-auto">
    <thead>
      <tr>
        <th class="px-4 py-2">Account Number</th>
        <th class="px-4 py-2">Account Type</th>
        <th class="px-4 py-2">Balance</th>
        <th class="px-4 py-2">Customer</th>
        <th class="px-4 py-2">Actions</th>
      </tr>
    </thead>
    <tbody>
      <% @accounts.each do |account| %>
        <tr>
          <td class="border px-4 py-2"><%= account.account_number %></td>
          <td class="border px-4 py-2"><%= account.account_type %></td>
          <td class="border px-4 py-2"><%= number_to_currency(account.balance) %></td>
          <td class="border px-4 py-2"><%= account.customer_id %></td>
          <td class="border px-4 py-2">
            <%= link_to 'Show', account_path(account), class: 'text-blue-600 hover:text-blue-800 mr-2' %>
            <%= link_to 'Edit', edit_account_path(account), class: 'text-green-600 hover:text-green-800 mr-2' %>
            <%= link_to 'Delete', account_path(account), method: :delete, data: { confirm: 'Are you sure?' }, class: 'text-red-600 hover:text-red-800' %>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>

  <%= link_to 'New Account', new_account_path, class: 'block mt-4 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded' %>
</div>
