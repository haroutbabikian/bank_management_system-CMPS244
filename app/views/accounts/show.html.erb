<div class="max-w-xl mx-auto py-6">
  <h1 class="text-2xl font-bold mb-6">Account Details</h1>

  <table class="w-full table-auto">
    <tbody>
      <tr>
        <td class="font-bold px-4 py-2">Account Number</td>
        <td class="border px-4 py-2"><%= @account.account_number %></td>
      </tr>
      <tr>
        <td class="font-bold px-4 py-2">Account Type</td>
        <td class="border px-4 py-2"><%= @account.account_type %></td>
      </tr>
      <tr>
        <td class="font-bold px-4 py-2">Balance</td>
        <td class="border px-4 py-2"><%= number_to_currency(@account.balance) %></td>
      </tr>
      <tr>
        <td class="font-bold px-4 py-2">Customer</td>
        <td class="border px-4 py-2"><%= @account.customer_id %></td>
      </tr>
    </tbody>
  </table>

  <%= link_to 'Edit Account', edit_account_path(@account), class: 'block mt-4 px-4 py-2 bg-blue-600 hover:bg-blue-700 text-white font-bold rounded' %>
